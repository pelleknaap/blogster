---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import AboutTheTheme from "../components/AboutTheTheme.astro";
import { SITE_TITLE } from "../config";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE} | Not Found`} slot="meta" />
  <Fragment slot="main">
    <section>
      <h1
        class="font-bold text-text-heading text-center text-4xl md:text-5xl pt-4 pb-2 overflow-hidden relative mx-auto"
      >
        <span class="z-10 relative">404</span>
      </h1>
      <h2
        class="font-bold text-text-heading text-center text-2xl md:text-3xl pt-4 pb-2 overflow-hidden relative mx-auto"
      >
        <span class="z-10 relative">You went somewhere unknown...</span>
      </h2>
    </section>
  </Fragment>
</PageLayout>
