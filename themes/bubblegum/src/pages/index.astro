---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import { SITE_TITLE } from "../config";
import BlogList from "src/components/BlogList.astro";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE} | Home`} slot="meta" />
  <Fragment slot="main">
    <Intro />
    
    <section>
      <h2 class="text-white font-semibold text-2xl">My Favorite Posts</h2>
      <BlogList onlyHomepagePosts />
    </section>
  </Fragment>
</PageLayout>
